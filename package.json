  "files": ["src/", "web/", "LICENSE", "README.md"],
  "keywords": ["nostr", "alephium", "schnorr", "bip340", "zaps"],
  "license": "MIT",
  "dependencies": {
    "@alephium/web3": "^2.0.8",
